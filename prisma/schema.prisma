// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  company       String?
  role          ROLE      @default(BASIC)
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  apps          App[]
  publishedApps Game[]
}

enum ROLE {
  BASIC
  CREATOR
  ADMIN
}

// The App model is the game before it is published
// When it is published, it is moved to Game model
model App {
  id          Int     @id @default(autoincrement())
  owner       User    @relation(fields: [ownerId], references: [id])
  ownerId     String
  name        String
  link        String
  description String
  license     String
  icon        String
  appId       String
  version     String
  width       Int
  height      Int
  maximized   Boolean
  alwaysOnTop Boolean
  focus       Boolean
  isPublished Boolean @default(false)

  @@index([ownerId])
}

// The Game model is the game after it is published
model Game {
  id          String          @id @default(cuid())
  publisher   User            @relation(fields: [publisherId], references: [id])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  publisherId String
  name        String
  description String
  license     String
  icon        String
  version     String
  installers  GameInstallers?

  @@index([publisherId])
}

model GameInstallers {
  id      String @id @default(cuid())
  game    Game   @relation(fields: [gameId], references: [id])
  gameId  String @unique
  mac     String
  windows String
  linux   String
}
